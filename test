node{
    stage('Git Checkout'){
        git 'https://github.com/Muruganv07/my-app.git'
    }
    stage('Mvn build'){
   def mvnHome = tool name: 'maven-3', type: 'maven'
   sh "${mvnHome}/bin/mvn package"
}
stage('SonarQube Analysis') {
	        def mvnHome =  tool name: 'maven-3', type: 'maven'
	        withSonarQubeEnv('sonar-scanner') { 
	          sh "${mvnHome}/bin/mvn sonar:sonar"
	        }
	    }
    stage('Email Notification'){
mail bcc: '', body: 'Git & Maven Integration project successfully build', cc: 'kumartr0205@gmail.com', from: '', replyTo: '', subject: 'Git & Maven Integration project', to: 'muruganvenkat07@gmail.com'
}
}
