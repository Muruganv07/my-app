node{
    stage('Git Checkout'){
        git 'https://github.com/Muruganv07/my-app.git'
    }
    stage('Mvn build'){
   def mvnHome = tool name: 'maven-3', type: 'maven'
   sh "${mvnHome}/bin/mvn package"
}
    stage('Email Notification'){
mail bcc: '', body: 'Git & Maven Integration project successfully build', cc: 'devanshi24198@gmail.com,gangakanagarajan@gmail.com', from: '', replyTo: '', subject: 'Git & Maven Integration project', to: 'muruganvenkat07@gmail.com'
}
}
