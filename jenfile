node{
   stage('SCM Checkout'){
     git 'https://github.com/damodaranj/my-app.git'
   }
   stage('Compile-Package'){

      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn clean package"
	 
   }
   stage('Email Notification'){
mail bcc: '', body: '''Hi Murugan,
Successfully learned how to setup email notification in jenkins''', cc: '', from: '', replyTo: '', subject: 'Successfully learned how to setup email notification in jenkins', to: 'muruganvenkat07@gmail.com'
}
}
